<Window x:Class="FSvBSCustomCloneUtility.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSvBSCustomCloneUtility"
        xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:cal="http://www.caliburnproject.org"
        mc:Ignorable="d"
        Title="FemShep v BroShep Utility" Height="450" Width="800">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <ImageBrush ImageSource="../images/main_banner.png" Stretch="UniformToFill"/>
            </Grid.Background>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ToggleButton Width="50" x:Name="ToggleMEGame" IsChecked="{Binding IsME3}" />
                <TextBlock Grid.Column="1" Foreground="White" x:Name="TargetGame"/>
            </StackPanel>
            <Image Grid.Column="0" Source="../images/logo.png" Margin="{adonisUi:Space}"/>
        </Grid>

        <ContentControl Grid.Row="1" x:Name="CustomMorph" />

        <DockPanel Grid.Row="2">
            <TextBlock >Toggable buttons</TextBlock>
        </DockPanel>
    </Grid>
</Window>
